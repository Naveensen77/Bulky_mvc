@model Category

<form method="post">
    <div class="card border-primary mb-3">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="card-header">
            <h4 class="card-title">Edit Category</h4>
        </div>
        <input asp-for="Id" hidden />
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <label>Category Name</label>
                    <input asp-for=Name type="text" autocomplete="off" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label>Display Order</label>
                    <input asp-for=DisplayOrder type="text" autocomplete="off" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="col-md-1 mt-4">
                    <button type="submit" asp-controller="category" asp-action="EditCategoryData" class="btn btn-primary">Update</button>
                </div>
                <div class="col-md-1 mt-4">
                    <a asp-controller="category" asp-action="index" class="btn btn-danger">Clear</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}